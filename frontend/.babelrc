{
  "env": {
    "test": {
      "presets": [
        ["@babel/preset-env", {
          "targets": {
            "node": "current"
          },
          "modules": "commonjs"
        }],
        "@babel/preset-react",
        "@babel/preset-typescript"
      ],
      "plugins": [
        "@babel/plugin-transform-modules-commonjs",
        ["@babel/plugin-transform-runtime", {
          "regenerator": true
        }]
      ]
    }
  }
} 